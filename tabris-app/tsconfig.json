{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist/",
    "lib": ["es6", "es2015.promise"],
    "jsx": "react",
    "jsxFactory": "JSX.createElement",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,


    "baseUrl": ".",
    "paths":{
      "ecore/*": ["src/ecore/*"],
      "conference/*": ["src/conference/*"]
    },
    "allowSyntheticDefaultImports": true // see https://pouchdb.com/guides/setup-pouchdb.html#typescript


  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
